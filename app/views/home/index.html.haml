          %h1 where
          %input{type: "text", value: ""}/
          city or state
        .col-md-2.col-sm-2.col-xs-5.find
          %button.btn.btn-primary.btn-sm.find_btn{type: "button"} Find Jobs
          %p
            %a{href: "#"} Advanced Job Search
      .clear
      %p.text
      %p.center_text
        %a{href: "#"}
          %b Post your resume
        \- It only takes a few seconds
      %p.bottom_text
        51,552 new
        %a{href: "#"} jobs
        in the last 7 days
        %br/
        Search job sites, newspapers, associations and company career pages.
      %p.visit_text
        For jobs in the United States, please visit
        %a www.fivejobs.com
