  / header start
  .row.navigation.row_1
    .col-md-6.col-sm-7.col-xs-6
      .left.rmm
        %ul
          %li
            %a{href: "#"}
              %b Find Jobs
          %li
            %a.find_links{href: "#"}
              Find Resumes
          %li
            %a.find_links{href: "#"}
